ScriptButton("Elerium", "https://pastebin.com/raw/XXXX")
ScriptButton("Fluent", "https://pastebin.com/raw/XXXX")
ScriptButton("Dr-Ray", "https://pastebin.com/raw/XXXX")

-- Info
local IText = Instance.new("TextLabel", Info)
IText.Size = UDim2.new(1,0,0,90)
IText.BackgroundTransparency = 1
IText.TextWrapped = true
IText.TextXAlignment = Enum.TextXAlignment.Center
IText.TextYAlignment = Enum.TextYAlignment.Top
