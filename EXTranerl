local Discord = Instance.new("TextButton", Info)
Discord.Size = UDim2.new(0,120,0,32)
Discord.Position = UDim2.new(0.5,-60,0,100)
Discord.Text = "Discord"
Discord.Font = Enum.Font.GothamBold
